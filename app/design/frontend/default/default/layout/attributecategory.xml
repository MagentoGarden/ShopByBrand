<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
    </default>
    <attributecategory_index_index>
    	<reference name="root">
    		<action method="setTemplate"><template>page/1column.phtml</template></action>
    	</reference>
    	<reference name="head">
    		<!-- If you have already include jquery library in your website, please comment the following tags -->
			<action method="addJs" ifconfig="magentogarden_attributecategory/general/enabled_jquery"><script>magentogarden/jquery-1.6.4.min.js</script></action>
			<action method="addJs"><script>magentogarden/global.js</script></action>
			<!-- End If -->
			<action method="addItem"><type>skin_js</type><name>magentogarden/attrcate/js/jscroller-0.4-src.js</name><params/></action>
			<action method="addCss"><stylesheet>magentogarden/attrcate/css/attrcate.css</stylesheet></action>
    	</reference>
        <reference name="content">
            <block type="attributecategory/attributecategory" name="attributecategory" template="attributecategory/attributecategory.phtml" />
        </reference>
    </attributecategory_index_index>
    
    <attributecategory_index_option>
    	<reference name="root">
    		<action method="setTemplate"><template>page/2columns-left.phtml</template></action>
    	</reference>
    	<reference name="left">
            <block type="attributecategory/option_layer_view" name="catalog.leftnav" after="currency" template="catalog/layer/view.phtml"/>
        </reference>
    	<reference name="content">
             <block type="attributecategory/option" name="attributecategory.option" template="attributecategory/option.phtml">
             <block type="attributecategory/option_product_list" name="product_list" template="attributecategory/option/product/list.phtml">
             	
             	<!-- <block type="catalog/product_list" name="product_list" template="catalog/product/list.phtml"> -->
                    <block type="catalog/product_list_toolbar" name="product_list_toolbar" template="catalog/product/list/toolbar.phtml">
                        <block type="page/html_pager" name="product_list_toolbar_pager"/>
                        <!-- The following code shows how to set your own pager increments -->
                        <!--
                            <action method="setDefaultListPerPage"><limit>4</limit></action>
                            <action method="setDefaultGridPerPage"><limit>9</limit></action>
                            <action method="addPagerLimit"><mode>list</mode><limit>2</limit></action>
                            <action method="addPagerLimit"><mode>list</mode><limit>4</limit></action>
                            <action method="addPagerLimit"><mode>list</mode><limit>6</limit></action>
                            <action method="addPagerLimit"><mode>list</mode><limit>8</limit></action>
                            <action method="addPagerLimit" translate="label"><mode>list</mode><limit>all</limit><label>All</label></action>
                        -->
                    </block>
                    <action method="addColumnCountLayoutDepend"><layout>empty</layout><count>6</count></action>
                    <action method="addColumnCountLayoutDepend"><layout>one_column</layout><count>5</count></action>
                    <action method="addColumnCountLayoutDepend"><layout>two_columns_left</layout><count>4</count></action>
                    <action method="addColumnCountLayoutDepend"><layout>two_columns_right</layout><count>4</count></action>
                    <action method="addColumnCountLayoutDepend"><layout>three_columns</layout><count>3</count></action>
                    <action method="setToolbarBlockName"><name>product_list_toolbar</name></action>
                </block>
             </block>
        </reference>
    </attributecategory_index_option>
</layout> 