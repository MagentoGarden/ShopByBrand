<?xml version="1.0"?>
<config>
	<tabs>
		<magentogarden translate="label" module="attributecategory">
			<label>Magento Garden</label>
			<sort_order>99</sort_order>
		</magentogarden>
	</tabs>
	<sections>
		<magentogarden_attributecategory translate="label" module="attributecategory">
			<label>Shop by Brand</label>
			<tab>magentogarden</tab>
			<frontend_type>text</frontend_type>
			<sort_order>10</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<general translate="label">
					<label>General</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled_attributecategory>
							<label>Enable Shop by Brand</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enabled_attributecategory>
						<enabled_jquery>
							<label>Enable Embeded jQuery</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enabled_jquery>
					</fields>
						
				</general>
				<featured translate="label">
					<label>Featured Image</label>
					<frontend_type>text</frontend_type>
					<sort_order>20</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<attribute_image_size_width>
							<label>Featured image width</label>
							<frontend_type>text</frontend_type>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Brand image width (in pixels), set to "null" for auto</comment>
						</attribute_image_size_width>
						
						<attribute_image_size_height>
							<label>Featured image height</label>
							<frontend_type>text</frontend_type>
							<sort_order>51</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Swatch image height (in pixels), set to "null" for auto</comment>
						</attribute_image_size_height>
						
						<attribute_rolling_interval>
							<label>Featured Image Rolling Interval</label>
							<frontend_type>text</frontend_type>
							<sort_order>52</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>The interval between each movement rolling brand images. The smaller the value, the faster the images move. (Unit: ms) Example: 50</comment>
						</attribute_rolling_interval>
					</fields>
				</featured>
				
			</groups>
		</magentogarden_attributecategory>
	</sections>
</config>